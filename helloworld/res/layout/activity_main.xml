<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
  android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

      <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn words from your reading"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Checking..."
        android:textSize="16sp"
        android:layout_marginBottom="6dp"/>

      <!--
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RADVIN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFF0000"
        android:layout_marginBottom="8dp"/>
        -->

            <TextView
              android:id="@+id/count_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Saved: 0 sentences"
    android:textSize="16sp"
        android:layout_marginTop="6dp"/>

<EditText
    android:id="@+id/server_host_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Host (http://192.168.1.124:54700)"
    android:inputType="textUri"
    android:layout_marginTop="16dp"/>

<EditText
    android:id="@+id/api_key_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Your API Key"
    android:inputType="text"
    android:layout_marginTop="16dp"/>


    <CheckBox
      android:id="@+id/service_toggle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Enable Clipboard Monitoring"
      android:checked="true"
      android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/boot_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start on boot"
        android:checked="true"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply and Restart"
        android:layout_gravity="center"/>

    
    <Button
      android:id="@+id/sync_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sync Now"
      android:layout_marginTop="16dp"
      android:layout_gravity="center"/>





    </LinearLayout>
</ScrollView>
